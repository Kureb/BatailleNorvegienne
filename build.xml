<?xml version="1.0" ?>
<project name="BatailleNorvÃ©gienne" default="dist">
        <property name="bin.dir" value="bin" />
        <property name="src.dir" value="src" />
        <property name="dist.dir" value="dist" />
 
        <target name="init">
                <mkdir dir="${bin.dir}" />
                <mkdir dir="${dist.dir}" />
                 <copy todir="${bin.dir}/img" >
                        <fileset dir="${src.dir}/img" >
                                <include name="**/*.png"/>
                        </fileset>
                </copy>
        </target>

        <target name="compile" depends="init">
                <javac srcdir="${src.dir}" destdir="${bin.dir}" />
        </target>

        <target name="clean" description="Fait le menage">
                <delete dir="${bin.dir}" />
                <delete dir="${dist.dir}" />
        </target>

        <target name="dist" depends="compile">
        		<jar destfile="${dist.dir}/app.jar" basedir="${bin.dir}" >
                                <manifest>
        				<attribute name="Main-Class" value="JeuGraphique" />
        			</manifest>
        		</jar>
		</target>
</project>